using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Text.RegularExpressions;
using System.Threading.Tasks;
namespace Lab6ex2._1
{
    internal class Program
    {
        static Random random = new Random();
        static void Main()
        {
            //generez doar 10 stringuri ca sa nu ia prea mult, dar nu este limitat la atat
            for (int i = 0; i < 10; i++)
            {
                string generatedString = GenerateString();
                Console.WriteLine("Generated String " + (i + 1) + ": " + generatedString);
            }
        }

        //L={(0^i 1^j)|i>j} este limbajul dupa care generez stringurile, de fiecare data cand este iteratie(*) este nu numar random de iteratii
        //eu i-am pus intre 1->5 pentru j si j+1->8 pentru i iteratii sa poata fi ca sa nu poata fi mult prea lungi stringurile generate, dar poate fi schimbat usor
        static string GenerateString()
        {
            string generatedstring = "";
            int j = random.Next(1, 6);
            int i = random.Next(j+1, 9);
            int k;
            for (k = 0; k < i; k++)
            {
                generatedstring = generatedstring + '0';
            }
            for (k = 0; k < j; k++)
            {
                generatedstring = generatedstring + '1';
            }
            return generatedstring;
        }
    }
}
